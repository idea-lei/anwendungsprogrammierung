@using Blazor_EF.Data
@using Blazor_EF.Models
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext db
@page "/student"

<h3>Students</h3>

<EditForm Model="studentToAdd" OnSubmit="AddStudentAsync">
    <label>Name</label>
    <InputText @bind-Value="studentToAdd.Name"/>
    <button type="submit">Add</button>
</EditForm>

@if (students == null)
{
    <p>loading...</p>
    return;
}

<table>
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in students)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
            </tr>
        }
    </tbody>
</table>

@code {
    private Student studentToAdd = new Student();
    private List<Student> students;

    protected override async Task OnInitializedAsync()
    {
        students = await db.Students.ToListAsync();
    }

    private async Task AddStudentAsync()
    {
        db.Students.Add(studentToAdd);
        await db.SaveChangesAsync();
        students.Add(studentToAdd);
        studentToAdd = new Student();
    }
}
