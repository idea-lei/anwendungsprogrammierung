@page "/student"
@using BlazorServer.Models
<h3>StudentPage</h3>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>BirthDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in students)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.BirthDate</td>
            </tr>
        }
    </tbody>
</table>

@code {
    private Student[] students = new Student[]
    {
    new Student{Id=1,Name="John",BirthDate=new DateOnly(2000, 1,1)},
    new Student{Id=2,Name="Mary",BirthDate=new DateOnly(2001, 2,2)},
    new Student{Id=3,Name="Tom",BirthDate=new DateOnly(2002, 3,3)},
    };
}
